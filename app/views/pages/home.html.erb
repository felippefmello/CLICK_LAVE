<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/325876/pexels-photo-325876.jpeg?auto=compress&cs=tinysrgb&h=650&w=940');">
  <div class="banner-content text-center">
    <h1>Click Lave</h1>
    <p>Suas roupas limpas pelo melhor preço</p>

      <div class="text-center" style="opacity: 0.8">
          <%= form_tag laundries_path, method: :get do %>
             <%= text_field_tag :query,
              params[:query],
              class: "form-control text-center",
              placeholder: "digite aqui o seu endereço..."
            %>
          <br>
          <%= submit_tag 'Lavanderias próximas', class: "btn btn-primary btn-md"%>
          <% end %>
      </div>

  </div>
</div>
<br>
<h2 class="text-center">Lavanderias em destaque</h2>
<br>

<div class="container">
  <div class="row">
    <% Laundry.first(3).each do |laundry| %>
      <%= render partial: 'shared/cards', locals: { laundry: laundry } %>
    <% end %>
  </div>
</div>
<br>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <%= link_to "", "#", class: "far fa-address-card" %>
    </div>
    <div class="col-xs-2">
      <h1 class="fas fa-arrow-circle-right arrow1"></h1>
    </div>
    <div class="col-xs-2">
      <%= link_to "", "#", class: "fas fa-dollar-sign" %>
    </div>
    <div class="col-xs-2">
      <h1 class="fas fa-arrow-circle-right"></h1>
    </div>
    <div class="col-xs-2 col-xs-offset-1">
      <%= link_to "", "#", class: "fas fa-shipping-fast" %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-4">
      <p class="p1">Cadastre-se</p>
    </div>
    <div class="col-xs-4">
      <p class="p2">Encontre o melhor preço</p>
    </div>
    <div class="col-xs-4">
      <p class="p3">Receba em casa</p>
    </div>
  </div>
</div>




