<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo-retangular.jpg" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to t("#", default: "Cadastrar Lavanderia"), new_laundry_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t("#", default: "Buscar Lavanderia"), laundries_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <div id="navbar-wagon-menu", data-toggle="dropdown">
            <button class="btn btn-sm btn-primary"> <%= "OlÃ¡, #{current_user.username.capitalize}"%></button>
          </div>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Meu perfil") %>
              <% end %>
            </li>
            <li>
              <% if current_user.laundries.first.nil? %>
                <%= link_to orders_path do %>
                  <i class="fas fa-tshirt"></i> <%= t(".settings", default: "Meus pedidos") %>
                <% end %>
              <% else %>
                <%= link_to laundry_laundry_orders_path do %>
                  <i class="fas fa-tshirt"></i> <%= t(".settings", default: "Minhas entregas") %>
                <% end %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Logout") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t("#", default: "Buscar Lavanderia"), laundries_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Entrar"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">

    <% if user_signed_in? %>

      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to "#" do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Meu perfil") %>
            <% end %>
          </li>
          <li>
            <% if current_user.laundries.first.nil? %>
              <%= link_to orders_path do %>
                <i class="fas fa-tshirt"></i> <%= t(".settings", default: "Meus pedidos") %>
              <% end %>
            <% else %>
              <%= link_to laundry_laundry_orders_path do %>
                <i class="fas fa-tshirt"></i> <%= t(".settings", default: "Minhas Entregas") %>
              <% end %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Logout") %>
            <% end %>
          </li>
          <li>
             <%= link_to t("#", default: "Cadastrar Lavanderia"), new_laundry_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
        </ul>
      </div>

    <% else %>
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to t("#", default: "Buscar Lavanderia"), laundries_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
          <li>
            <%= link_to t(".sign_in", default: "Entrar"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
        </ul>
      </div>
    <% end %>

  </div>
</div>

