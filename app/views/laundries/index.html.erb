<div class="container">

<h1>Lavanderias próximas a você:</h1>


  <div class="main-container">

    <div class="col-xs-12 col-sm-6 col-md-4">
      <% @laundries.each do |laundry| %>
        <div class="card" style="background-image: url(images/5asec.jpg)">
        <h2><%= laundry.name %></h2>
        <h3><%= laundry.price_kg %></h3>
        </div>
      <% end %>
    </div>

    <div id="map"></div>
        <!-- Gmaps js: building the map -->
  </div>
</div>

    <script>
      function initMap() {
        // Create a map object and specify the DOM element for display.
        var map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 52.5206, lng: 13.4098},
          scrollwheel: false,
          zoom: 8
        });
      }
    </script>

    <!-- Gmaps JavaScript -->
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
        </script>
