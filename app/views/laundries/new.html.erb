<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), asset-url('/assets/laundries_new.jpg');">

  <div class="container text-justify">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h2>Junte-se ao nosso time</h2>

        <%= simple_form_for(@laundry) do |f| %>
          <div class="form-inputs">

            <%= f.input :name, label: "Nome", required: true %>

            <%= f.input :address, label: "Endereço", required: true %>

            <%= f.input :price_kg, label: "Preço por kg de roupa", required: true %>
<!--
            <%= f.input :capacity, required: true %>
 -->
            <%= f.input :cnpj, label: "Endereço eletrônico da sua foto", required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Cadastrar", class: "btn btn-primary" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>

</div>

