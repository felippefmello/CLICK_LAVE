<div class="container">
  <div class="row">
    <div class="col-xs-12">
        <h1></h1><br>

        <div class="panel panel-info">
          <div class="panel-heading">
            <h4>Minhas Entregas</h4>
          </div>

          <table class="table" style="width:100%">
            <tr>
              <th>Usuário</th>
              <th>Lavanderia</th>
              <th>Endereço</th>
              <th>Peso</th>
              <th>Valor</th>
              <th>Status</th>
            </tr>

            <% @orders.each do |order| %>
            <tr>
              <td><%= order.user.username.capitalize %></td>
              <td><%= order.laundry.name %></td>
              <td><%= order.user.address %></td>
              <td><%= order.order_kg %> kg</td>
              <td>R$ <%= order.laundry.price_kg * order.order_kg %>,00</td>
              <td>
                <% if order.status %>
                  <div style="color:#72c3ab"> <%= "Entregue" %>
                    <td><button class="btn btn-xs btn-success disabled"><i class="fa fa-tshirt"></i></button></td>
                  </div>
                <% else %>
                  <div style="color:#A63446"><%= "Pendente" %>
                    <td>
                      <%= link_to "<i class='fa fa-tshirt'></i>".html_safe, laundry_order_path(order), method: :patch, class: "btn btn-xs btn-danger"%>
                    </td>
                   </div>
                <% end %>

              </td>
            </tr>
            <% end %>
          </table>

        </div>

    </div>
  </div>
</div>

